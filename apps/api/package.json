{
  "name": "api",
  "version": "1.0.0",
  "description": "Backend API f√ºr Pfad des Paradoxons",
  "main": "dist/index.js",
  "scripts": {
    "dev": "dotenv -e ../../.env -- ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "dotenv -e ../../.env -- node dist/index.js",
    "test": "dotenv -e ../../.env -- jest --verbose --coverage",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "format": "prettier --write ./src",
    "prisma:auth": "dotenv -e ../../.env -- prisma generate --schema=../../prisma/auth.prisma",
    "prisma:payments": "dotenv -e ../../.env -- prisma generate --schema=../../prisma/payments.prisma",
    "prisma:content": "dotenv -e ../../.env -- prisma generate --schema=../../prisma/content.prisma",
    "prisma:all": "pnpm run prisma:auth && pnpm run prisma:payments && pnpm run prisma:content",
    "migrate:auth": "dotenv -e ../../.env -- prisma migrate dev --schema=../../prisma/auth.prisma",
    "migrate:payments": "dotenv -e ../../.env -- prisma migrate dev --schema=../../prisma/payments.prisma",
    "migrate:content": "dotenv -e ../../.env -- prisma migrate dev --schema=../../prisma/content.prisma",
    "migrate:all": "pnpm run migrate:auth && pnpm run migrate:payments && pnpm run migrate:content"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv-cli": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^2.8.7",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "off",
      "import/extensions": "off",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2
  }
}
